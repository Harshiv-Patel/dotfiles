[user]
   name = Casey McGinty
   email = casey.mcginty@gmail.com
[color]
   ui = true
[core]
   excludesfile = ~/.gitexcludes
[format]
   pretty = format:"%C(bold blue)%h%C(reset) [%C(green)%ar%Creset] %s, %C(cyan)%an% %C(bold yellow)%d%C(reset)"
[push]
   default = simple
   recurseSubmodules = check
[diff "odf"]
   textconv=odt2txt
[branch]
   autosetuprebase = always
   autosetupmerge = always
[rebase]
   stat = true
   # rebase changes commited with '--squash' or '--fixup'
   autosquash = true
   # stash uncommited changes during rebase
   autostash = true
[mergetool "meld"]
   cmd = meld \"$LOCAL\" \"$MERGED\" \"$REMOTE\"
[mergetool "p4merge-osx"]
   cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
[merge]
   tool = meld
   conflictstyle = diff3
   keepBackup = false
[mergetool]
   prompt = false
[alias]
   a = add
   aa = add --all
   ai = add --interactive
   ap = add --patch
   au = add --update
   bl = blame -w
   br = branch --verbose --verbose
   cm = commit --verbose
   cma = commit --verbose --amend --reset-author
   cmaa = commit --verbose --amend --reset-author --all -C HEAD
   cmf = commit --fixup
   cms = commit --squash
   co = checkout
   dc = diff -M --color-words --cached
   dh = diff -M HEAD
   di = diff -M --color-words --ignore-space-at-eol
   dino = diff -M --name-only
   ds = diff --stat
   lg = log -C
   lg-standup = log -C --format="%s" --author=cmcginty --since yesterday
   lga = log -C --graph --all
   lgm = log -C --format=medium
   lgno = log -C --name-only
   lgns = log -C --name-status
   lgp = log -C --patch --ignore-space-at-eol
   lgs = log -C --stat=180
   lgss = log -C --shortstat
   lgu = log -C @{u}..
   ls = ls-files
   mg = merge
   message = log --format="%B"
   pl = pull --prune
   pla = pull --all --prune
   ps = push
   rb = rebase
   rba = rebase --abort
   rbc = rebase --continue
   rbi = rebase --interactive
   rbs = rebase --skip
   rbu = rebase --interactive @{u}
   rem = remote -v
   rev = revert -n
   rs = reset
   rsh = reset --hard
   rss = reset --soft
   sa = stash
   sai = stash --keep-index
   st = status -sb
   sub-checkout = submodule update --remote --checkout
   sub-rebase = submodule update --remote --rebase
   sub-update = submodule update --init --recursive
   sub-sync = "!f() { git sub-checkout; git sub-update; }; f"
   up = remote update
   # print current sha1 hash only
   sha = rev-parse --short
   # list commit authors
   who = "!f() { git shortlog -s | sort -rn; }; f"
   # print branch names of HEAD
   where = log -1 --pretty=format:%d
   # start RO server
   serve = !git daemon --base-path=. --export-all --reuseaddr --informative-errors --verbose
   # start shared server
   hub = !git daemon --base-path=. --export-all --enable=receive-pack --reuseaddr --informative-errors --verbose
   # sync changes to remote
   sync = !git pull && git push
   # disk usage of tracked files
   du = "!f() { git ls-files $@ | xargs -i du -ab {} | awk '{total+=$0}END{print total}'; }; f"
   # create git repo with non-standard .git dir location
   initexternal = "!f() { git --work-tree=. --git-dir=\"$1\" init && echo \"gitdir: $1\" >> .git; }; f"
   # all branches with common parents
   related = "!f() { git branch --contains $(git rev-list --max-parents=0 HEAD); }; f"
   # list conflict files in the current merge/rebase
   conflict = diff --name-only --diff-filter=U
[sendemail]
   smtpserver = localhost
   chainreplyto = false
   aliasesfile = /home/pcm/.gitaliases
[color "diff"]
   meta = yellow bold
   frag = magenta bold
   old = red bold
   new = green bold
[color "status"]
   added = green
   changed = yellow bold
   untracked = red bold
[credential]
   helper = store --file ~/.gitcredentials
[rerere]
   enabled = true
[diff]
   indentHeuristic = true
[include]
   path = ~/.gitconfig.local
